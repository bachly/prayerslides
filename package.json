{
  "name": "prayerslides",
  "description": "Generate prayer slides",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next",
    "build": "cross-env NODE_ENV=production next build",
    "start": "next start",
    "export": "cross-env NODE_ENV=production next export",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env ELECTRON_DEV=true electron .\"",
    "build-electron": "node scripts/build-electron.js",
    "build-simple": "node scripts/simple-build.js",
    "dist": "npm run build-electron",
    "dist-all": "npm run build && npm run export && electron-builder --publish=never --win --mac --linux"
  },
  "dependencies": {
    "@tabler/icons-react": "^2.20.0",
    "@tailwindcss/typography": "^0.5.2",
    "classnames": "^2.3.1",
    "clsx": "^1.1.1",
    "date-fns": "^2.28.0",
    "firebase": "^11.10.0",
    "nanoid": "^4.0.2",
    "next": "12.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.8.0",
    "underscore": "^1.13.6"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.3.27",
    "electron-builder": "^24.13.3",
    "eslint": "8.9.0",
    "eslint-config-next": "12.0.10",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.0.23",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": "16"
  },
  "build": {
    "appId": "com.pottershouse.prayerslides",
    "productName": "Prayer Slides",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "!node_modules/canvas/**/*",
      "package.json"
    ],
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "forceCodeSigning": false,
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "portable",
      "sign": false
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
