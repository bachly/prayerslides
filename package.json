{
  "name": "prayerslides",
  "description": "Generate prayer slides",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next",
    "build": "cross-env NODE_ENV=production next build",
    "start": "next start",
    "export": "cross-env NODE_ENV=production next export",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env ELECTRON_DEV=true electron .\"",
    "build-app": "node scripts/simple-build.js",
    "create-distribution": "node scripts/create-distribution-zip.js",
    "package-win": "node scripts/package-app.js win32",
    "package-mac": "node scripts/package-app.js darwin",
    "build-mac": "node scripts/cross-platform-build.js",
    "fix-paths": "node scripts/fix-paths.js",
    "create-initial-zip": "node scripts/create-initial-zip.js",
    "dist": "npx electron-builder",
    "dist-win": "npx electron-builder --win",
    "dist-mac": "npx electron-builder --mac"
  },
  "dependencies": {
    "@tabler/icons-react": "^2.20.0",
    "@tailwindcss/typography": "^0.5.2",
    "adm-zip": "^0.5.16",
    "classnames": "^2.3.1",
    "clsx": "^1.1.1",
    "date-fns": "^2.28.0",
    "nanoid": "^4.0.2",
    "next": "12.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.8.0",
    "underscore": "^1.13.6"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.3.27",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "eslint": "8.9.0",
    "eslint-config-next": "12.0.10",
    "postcss": "^8.4.6",
    "tailwindcss": "^3.0.23",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": "16"
  },
  "build": {
    "appId": "com.pottershouse.prayerslides",
    "productName": "Prayer Slides",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "prayer-slides-data.zip",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "prayer-slides-data.zip",
        "to": "prayer-slides-data.zip"
      }
    ],
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "compression": "store",
    "removePackageScripts": true,
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "requestedExecutionLevel": "asInvoker",
      "sign": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Prayer Slides",
      "installerIcon": "public/icon.png",
      "uninstallerIcon": "public/icon.png",
      "installerHeaderIcon": "public/icon.png",
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    }
  }
}